<h2 class="title_logo_2">登録済みルーム一覧</h2>
 <table class= "register_room_table">
   <thead>
     <tr>
       <th>ルーム画像</th>
       <th>ルーム名</th>
       <th>ルーム紹介</th>
       <th>料金</th>
       <th>作成日</th>
     </tr>
   </thead>

   <tbody>
     <% @rooms.each do |room| %>
       <tr>
         <td><%= image_tag room.image.url, :size => '300x200' %></td>
         <td><%= link_to "#{room.name}", room %></td>
         <td><%= room.introduction %></td>
         <td><%= room.price %></td>
         <td><%= room.created_at.to_s(:datetime_jp) %></td>
       </tr>
     <% end %>
   </tbody>
 </table>
