<h3 class="text_logo_3">予約済みルーム一覧</h3>
 <table class= "room_index_table">
   <thead>
     <tr>
       <th>ルーム画像</th>
       <th>ルーム名</th>
       <th>ルーム紹介</th>
       <th>合計料金</th>
       <th>開始日</th>
       <th>終了日</th>
       <th>予約確定日時</th>
     </tr>
   </thead>

   <tbody>
     <% @reservations.each do |reservation| %>
       <tr>
         <td><%= image_tag reservation.room.image.url%></td>
         <td><%= link_to "#{reservation.room.name}",reservation %></td>
         <td><%= reservation.room.introduction %></td>
         <td><%= reservation.room.price * reservation.member * (reservation.end_date - reservation.start_date).to_i %></td>
         <td><%= reservation.start_date %></td>
         <td><%= reservation.end_date %></td>
         <td><%= reservation.created_at.to_s(:datetime_jp) %></td>
       </tr>
       <% end %>
   </tbody>
 </table>
